#lang racket

(define-syntax (declare-fun stx)
  (syntax-case stx ()
    [(_ id domain ... range)
     #'(begin
         (define-syntax ('id stx)
           (syntax-case stx ()
             [(_ args ..)
              (printf-smt "(~a ~a)" 'id '(args ..))]))
         (printf-smt "(declare-fun ~a ~a ~a)\n"
                'id
                '(domain ...)
                'range))]))
